<div class="container">
  <div class="row mt-5">
    <h4>グループ新規登録</h4>
  </div>

  <div class="row mt-3">
    <%= form_with model: @group, local: true do |f| %>
      <div class="row mt-3">
        <div class="col-4"><%= f.label "グループ画像" %></div>
        <div class="col-3"><%= f.file_field :group_image, accept: "image/*" %></div>
      </div>

      <div class="row mt-2">
        <div class="col-4"><%= f.label "グループ名" %></div>
        <div class="col-3"><%= f.text_field :name %></div>
      </div>

      <div class="row mt-2">
        <div class="col-4"><%= f.label "紹介文" %></div>
        <div class="col-8"><%= f.text_area :introduction, class: "w-100" %></div>
      </div>

      <div class="row mt-2">
        <div class="col-4"></div>
        <div class="col-3"><%= f.submit "新規登録", class: "btn btn-info" %></div>
      </div>
    <% end %>
  </div>
</div>