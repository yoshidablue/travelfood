<!-- ログインしている時 -->
<% if customer_signed_in? %>
  <div class="container">
    <div class="row">
      <div class="col-md-9 offset-1">
        <div class="top-image text-center mt-5 ml-4">
          <%= image_tag 'food.png', size: "600x400", style: "position: relative;" %>
            <p style="position:absolute; top:90px; left:300px; color:#FFF; background-color:rgba(0,0,0,0.3);">
              ようこそ、旅飯へ！<br>
              このサイトは、国内のご当地飯の情報を<br>
              共有するECサイトになります。
            </p>
        </div>
      </div>
    </div>

<!-- ログインしていない時 -->
<% else %>
  <div class="container">
    <div class="row">
      <div class="col-md-9 offset-1">
        <div class="top-image text-center mt-5 ml-4">
          <%= image_tag 'food.png', size: "600x400", style: "position: relative;" %>
            <p style="position:absolute; top:90px; left:300px; color:#FFF; background-color:rgba(0,0,0,0.3);">
              ようこそ、旅飯へ！<br>
              このサイトは、国内のご当地飯の情報を<br>
              共有するECサイトになります。
            </p>
        </div>
      </div>
      <div class="btn-wrapper col-6 mx-auto mt-5">
        <div class="row">
          <%= link_to "ログイン", new_customer_session_path, class: "btn btn-success btn-block mb-3" %>
        </div>
        <div class="row">
          <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>